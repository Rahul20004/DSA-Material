class Solution {
    public int missingNumber(int[] nums) {
        int n = nums.length;
        // Sum of first n numbers using formula 
        int expectedSum = n* (n +1) / 2;
        // Sum of all elements in tbe array 
        int actualSum = 0;
        for(int num : nums){
            actualSum += num;
        }
        // Missing number = ExpectedSum - actualSum
        return expectedSum - actualSum;

        
    }
}


